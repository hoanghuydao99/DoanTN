<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context=".Activity.ChitietsanphamActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/back"
            android:layout_margin="10dp"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:src="@drawable/back1">
        </ImageView>
        <TextView
            android:id="@+id/tvtensp"
            android:layout_centerHorizontal="true"
            android:layout_margin="10dp"
            android:text="tensanpham"
            android:textStyle="bold"
            android:textSize="23dp"
            android:fontFamily="@font/gotham"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        </TextView>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/hai"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp">
        <ImageView
            android:layout_centerHorizontal="true"
            android:id="@+id/imgsanpham"
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:src="@mipmap/ic_launcher"></ImageView>
        <ImageView
            android:id="@+id/imageViewFavorite"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/imgsanpham"
            android:src="@drawable/traitim"
            android:layout_toRightOf="@id/imgsanpham"></ImageView>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/ccc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="280dp">
        <TextView
            android:layout_centerHorizontal="true"
            android:id="@+id/tvgiasp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/gotham"
            android:textStyle="bold"
            android:textSize="25dp"
            android:text="giasp">
        </TextView>
        <LinearLayout
            android:layout_centerHorizontal="true"
            android:layout_below="@id/tvgiasp"
            android:layout_width="wrap_content"
            android:id="@+id/hhh"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/sao0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/sao">
            </ImageView>
            <ImageView
                android:id="@+id/sao1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/sao">
            </ImageView>
            <ImageView
                android:id="@+id/sao2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/sao">
            </ImageView>
            <ImageView
                android:id="@+id/sao3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/sao">
            </ImageView>
            <ImageView
                android:id="@+id/sao4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/sao">
            </ImageView>
        </LinearLayout>
        <TextView

            android:layout_margin="13dp"
            android:id="@+id/tvmota"
            android:fontFamily="@font/gotham"
            android:textSize="20dp"
            android:text="motachitiet"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/hhh"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

        </TextView>
    </RelativeLayout>
    <TextView
        android:layout_marginTop="15sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Số lượng"
        android:fontFamily="@font/gotham"
        android:layout_marginLeft="45dp"
        android:layout_below="@+id/ccc">

    </TextView>
        <Button
            android:id="@+id/giam"
            android:gravity="center"
            android:text="-"
            android:textSize="30dp"
            android:layout_marginLeft="130dp"
            android:layout_below="@+id/ccc"
            android:layout_width="50dp"
            android:background="@drawable/vuong"
            android:layout_height="wrap_content">
        </Button>
        <TextView
            android:id="@+id/soluongsp"
            android:layout_margin="15sp"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/ccc"
            android:text="1"
            android:textSize="18dp"
            android:fontFamily="@font/gotham"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

        </TextView>
        <Button
            android:id="@+id/tang"
            android:gravity="center"
            android:text="+"
            android:textSize="23dp"
            android:layout_marginRight="130dp"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/ccc"
            android:layout_width="50dp"
            android:background="@drawable/vuong"
            android:layout_height="wrap_content">

        </Button>
    <TextView
        android:id="@+id/tvsoluongsp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_below="@+id/ccc"
        android:text="abc"
        android:fontFamily="@font/gotham"
        android:layout_marginRight="25dp"
        android:layout_alignParentRight="true"
        android:layout_marginTop="15dp">

    </TextView>
    <RelativeLayout
        android:layout_marginTop="550dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/btthemgh"
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:text="Them vao gio hang"
            android:textColor="#00DD00"
            android:textAllCaps="false"
            android:layout_height="wrap_content"
            android:background="@drawable/hcn">

        </Button>
    </RelativeLayout>
</RelativeLayout>